mixin hero(props)
	.hero
		.container
			.hero__inner
				.hero__info
					.hero__titles
						h1.hero__title= props.title
						if(props.subtitle)
							h2.hero__subtitle= props.subtitle
					.hero__btns
						+btn({
							tag: 'a',
							href: props.href,
							text: props.btnText,
							mods: 'border'
						})(rel="noopener noreferrer" target="_blanc")
						+btn({
							tag: 'a',
							href: 'https://www.gosuslugi.ru/category/health',
							text: 'Запись через гос услуги',
							mods: 'border',
						})(rel="noopener noreferrer" target="_blanc")
				figure.hero__img
					picture.lazy
						source(data-srcset="https://res.cloudinary.com/dhccuflos/image/upload/v1563187661/hero__webp.webp" srcset="img/sample.png" type="image/webp")
						img(data-srcset="https://res.cloudinary.com/dhccuflos/image/upload/v1563187498/hero.png" src="img/sample.png" alt="Фото всей семьи")
					figcaption.hide-text Фотография врачей
