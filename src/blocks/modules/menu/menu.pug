mixin menu()
	nav.menu(aria-hidden="true")
		.menu__wrapper
			ul.menu__list#main-nav-menu(role="menu" aria-labelledby="main-menu-trigger")
				li.menu__item
					a.link.menu__link.menu__link--has-submenu(href="javascript:void(0);" aria-haspopup="true" aria-expanded="false" role="menuitem") О больнице
						.menu__icon
							+icon('hospital', 'menu__svg-icon')
						+arrow()
					+submenu(submenu.hospital)
				li.menu__item
					a.link.menu__link.menu__link--has-submenu(href="javascript:void(0);" aria-haspopup="true" aria-expanded="false" role="menuitem") Пациентам
						.menu__icon
							+icon('patient', 'menu__svg-icon')
						+arrow()
					+submenu(submenu.patient)
				li.menu__item
					a.link.menu__link.menu__link--has-submenu(href="javascript:void(0);" aria-haspopup="true" aria-expanded="false" role="menuitem") 
						span Структура
						.menu__icon
							+icon('structure', 'menu__svg-icon')
						+arrow()
					+submenu(submenu.structure)
				li.menu__item
					a.link.menu__link(href="/licence.html" role="menuitem") Лицензии
						.menu__icon
							+icon('licence', 'menu__svg-icon')
