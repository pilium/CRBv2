mixin doctor-about(props)
	.doctor-about
		.doctor-about__wrapper
			.doctor-about__info
				figure
					img.doctor-about__img(src= props.src alt= props.name)
					figcaption.doctor-about__figcaption= props.name
				+doctor-about__test()
			.doctor-about__education
				.doctor-about__main-info
					h1.doctor-about__name= props.name
					.doctor-about__job= props.job
				.doctor-about__edu
					h2.doctor-about__edu-title Образование
					ul.doctor-about__edu-list
						each item in props.edu
							li.doctor-about__edu-item
								span.doctor-about__edu-year= item.year
								p.doctor-about__edu-text= item.text
				.doctor-about__cert
					h2.doctor-about__edu-title Сертификаты
					ul.doctor-about__cert-list
						each item in props.cert
							li.doctor-about__edu-item
								img(src= item alt="alt")
mixin doctor-about__test()
	ul.doctor-about__test
		li.doctor-about__test-item
			span.doctor-about__test-title Специальность:
			span.doctor-about__test-text Участковый терапевт
		li.doctor-about__test-item
			span.doctor-about__test-title Кабинет:
			span.doctor-about__test-text 306
		li.doctor-about__test-item.doctor-about__test-item--time
			span.doctor-about__test-title Время работы:
			ul
				li
					span Понедельник:
					span 08:00 - 16:00
				li
					span Вторник:
					span 08:00 - 16:00
				li
					span Среда:
					span 08:00 - 16:00
				li
					span Четверг:
					span 08:00 - 16:00
				li
					span Пятница:
					span 08:00 - 16:00
				li
					span Суббота:
					span 08:00 - 16:00
